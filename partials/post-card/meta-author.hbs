{{!-- Well Ghost doesn't have many functionalities so we have to do it like this --}}
{{#match @custom.post_card_details '=' 'Author'}}
<span class="post-card__meta post-card__meta--author">
    <span class="post-card__meta-info">{{t 'By'}}</span>
    <a href="{{primary_author.url}}" class="post-card__meta-link">{{primary_author.name}}</a>
</span>
{{else}}
    {{#match @custom.post_card_details '=' 'Author & Date'}}
    <span class="post-card__meta post-card__meta--author">
        <span class="post-card__meta-info">{{t 'By'}}</span>
        <a href="{{primary_author.url}}" class="post-card__meta-link">{{primary_author.name}}</a>
    </span>
    {{else}}
        {{#match @custom.post_card_details '=' 'Author & Excerpt'}}
        <span class="post-card__meta post-card__meta--author">
            <span class="post-card__meta-info">{{t 'By'}}</span>
            <a href="{{primary_author.url}}" class="post-card__meta-link">{{primary_author.name}}</a>
        </span>
        {{else}}
            {{#match @custom.post_card_details '=' 'Author & Date & Excerpt'}}
            <span class="post-card__meta post-card__meta--author">
                <span class="post-card__meta-info">{{t 'By'}}</span>
                <a href="{{primary_author.url}}" class="post-card__meta-link">{{primary_author.name}}</a>
            </span>
            {{/match}}
        {{/match}}
    {{/match}}
{{/match}}

